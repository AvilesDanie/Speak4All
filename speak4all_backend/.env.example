# ============================================
# Speak4All Backend - Variables de Entorno
# ============================================
# Copy this file to .env and fill real values before running

# === Base de Datos ===
# Para Docker: postgresql://postgres:postgres@db:5432/speak4all
# Para local: postgresql://postgres:postgres@localhost:5432/speak4all
DATABASE_URL=postgresql://postgres:postgres@db:5432/speak4all

# === Autenticación JWT ===
JWT_SECRET=change_this_secret_to_something_very_secure_in_production
JWT_ALGORITHM=HS256

# === Google OAuth (RECOMENDADO para validar id_token) ===
# Obtén estas credenciales en: https://console.cloud.google.com/apis/credentials
# Si no proporcionas GOOGLE_CLIENT_ID, el sistema usará método legacy (menos seguro)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# === OpenAI API ===
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE_NAME=coral

# === Configuración de Audio ===
AUDIO_RATE=44100
BITRATE=192k

# === CORS (dominios permitidos, separados por coma) ===
# Producción: agrega tu dominio público
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === Límites de Archivos Subidos ===
MAX_UPLOAD_SIZE_MB=10
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav,audio/webm,audio/ogg

# === Logging ===
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# === Configuración de Pausas en Ejercicios (segundos) ===
PAUSA_BLOQUE_S=1.0
REP_BASE_S=0.8
REP_POR_PAL_S=0.45
REP_MAX_S=3.5

