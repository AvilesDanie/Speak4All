# Speak4All backend environment example
# Copy this file to .env and fill real values before running

# Database URL (Postgres). Example for docker-compose service `db`:
DATABASE_URL=postgresql://postgres:postgres@db:5432/speak4all

# JWT secret used in app/config.py
JWT_SECRET=change_this_secret

# OpenAI (opcional) - si no usas OpenAI deja vac√≠o
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE_NAME=coral

# Audio settings (opcional)
AUDIO_RATE=44100
BITRATE=192k

# Pydantic settings will pick .env by default
